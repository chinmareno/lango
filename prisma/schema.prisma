generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CLIENT
  TRANSLATOR
}

model User {
  id                String   @id @default(uuid())
  email             String   @unique
  password          String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  currentRole       Role @default(TRANSLATOR)
  translator        TranslatorProfile?
  client            ClientProfile?
}

model TranslatorProfile {
  id        String   @id @default(uuid())
  userId    String   @unique
  name      String   
  user      User     @relation(fields: [userId], references: [id])
  bio       String?
  languages LanguageSkillTranslator[]
}

model LanguageSkillTranslator {
  id               String             @id @default(uuid())
  translatorId     String
  translator       TranslatorProfile  @relation(fields: [translatorId], references: [id])
  language         String
  proficiency      Int
  @@index([translatorId])
}

model ClientProfile {
  id                   String   @id @default(uuid())
  userId               String   @unique
  name                 String   
  user                 User     @relation(fields: [userId], references: [id])
  company              String?
  languagesNeeded      LanguageSkillClient[]
}

model LanguageSkillClient {
  id            String        @id @default(uuid())
  clientId      String
  client        ClientProfile @relation(fields: [clientId], references: [id])
  language      String
  proficiency   Int
  @@index([clientId])
}


